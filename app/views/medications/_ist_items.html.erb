
<div class="col-md-5 col-sm-12 savebut">
  <div class="form-group">
    <%= ist.text_field :date,class: 'form-control datepicker', required: true %>
    <%= ist.label :date, class: 'form-control-placeholder' %>
  </div>

  <div class="form-group plusinput">
    <% unless ist.object.new_record? %>
        <img src="<%= ist.object.signature_of_dd_person %>", width="200", height="200" />
    <% end %>
    <%= ist.text_field :signature_of_dd_person,class: 'form-control signature', readonly: true%>
    <%= ist.label :signature_of_dd_person, class: 'form-control-placeholder' %>
  </div>

  <div class="form-group">
    <%= ist.text_field :date_first_completed_by_person,class: 'form-control datepicker'%>
    <%= ist.label :date_first_completed_by_person, class: 'form-control-placeholder' %>
  </div>
  <div class="form-group">
    <%= ist.text_field :date_of_change_2,class: 'form-control datepicker'%>
    <%= ist.label :date_of_change_2,'Date of Update/Changes', class: 'form-control-placeholder' %>
  </div>
</div>

<div class="col-md-5 col-sm-12 savebut">
