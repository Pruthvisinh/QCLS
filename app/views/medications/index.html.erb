<div id="page-wrapper">
  <div class="row">
    <p>&nbsp;</p>
    <div class="panel panel-default">
      <div class="panel-heading indiviuals_list">
        Medications List

      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
              <th>S. No.</th>
              <th>Individual Name</th>
              <th>Date of Training</th>
              <th>Last Edited</th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
            <% @medications.each_with_index do |medication, i| %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= medication.user.full_name if medication.user.present? %></td>
                  <td><%= medication.date %></td>
                  <td><%= medication.updated_at %></td>
                  <td><%= link_to edit_medication_path(medication) do %>
                        <%= image_tag 'setting.png' %> Edit
                    <% end %>
                  </td>
                  <td><%= link_to medication_path(medication) do %>
                        <i class="fa fa-eye"></i> View
                    <% end %>
                  </td>
                  <td><%= link_to  medication_path(medication,authenticity_token: form_authenticity_token), method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <%= image_tag 'delete.png' %> Delete
                    <% end %>
                  </td>
                </tr>
                <tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>


      <!-- /.panel-body -->
    </div>
    <%= link_to 'Add New Entry', new_medication_path, class: 'btn add_entry' %>
  </div>
  <!-- /.row -->
</div>