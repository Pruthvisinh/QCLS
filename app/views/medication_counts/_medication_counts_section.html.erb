    <%= mdc.label :date, class: 'form-control-placeholder' %>
  </div>

  <div class="form-group">
    <%= mdc.text_field :amount_used,class: 'form-control'%>
    <%= mdc.label :amount_used, class: 'form-control-placeholder' %>
  </div>

  <div class="form-group">
    <%= mdc.text_field :amount_left,class: 'form-control'%>
    <%= mdc.label :amount_left, class: 'form-control-placeholder' %>
  </div>
</div>

<div class="col-md-6 col-sm-6 col-lg-6 col-xs-12">
