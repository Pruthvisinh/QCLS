<div id="page-wrapper">
  <div class="row">
    <h4 class="text-center">STARK DDSTEPS TO HELP ME LIVE A GOOD LIFEHRCPACKET</h4>
    <div class="monthly-behavior-data">
      <div class="row">
        <div class="col-sm-6">Individual’s Name: <%= @behavior.user.full_name if @behavior.user.present? %></div>
        <div class="col-sm-6">Restrictive Measures Implementation Date: <%= @behavior.created_at.strftime("%d.%m.%Y") %></div>
      </div>


      <div class="space-20"></div>
      <div class="headline text-center">
        <h4>MONTHLY BEHAVIOR SUPPORT DATA</h4>
      </div>
      <div class="space-20"></div>

      <table class="table medication-count-table">
        <thead>
        <tr>
          <td colspan="32">
            <table class="table table-borderless" style="font-size: 12px !important;">
              <tbody>
              <tr>
                <td>Provider: <%= @behavior.provider %></td>
                <td colspan="2">Provider #: <%= @behavior.provider_no %></td>
                <td colspan="2">Service #: <%= @behavior.service %></td>
                <td colspan="2">Medicaid #: <%= @behavior.medicaid_number %></td>
                <td>Month/Year: <%= @behavior.month %> / <%= @behavior.year %></td>
              </tr>
              <tr>
                <td>Location:</td>
                <td>
                  <ul class="common-ul-style route-list">
                    <li>
                      <span class="check-mark">Work</span>
                      <% if @behavior.location == 'work' %>
                          <span class="checkmark"></span>
                      <% end %>
                    </li>
                  </ul>
                </td>
                <td colspan="2" class="vertical-align-middle">
                  <i>Attended</i>
                  <strong class="text-underline">  	&nbsp;12</strong>
                  <i>days out of</i>
                  <strong class="text-underline">  	&nbsp; 30</strong>
                </td>
                <td>
                  <ul class="common-ul-style route-list">
                    <li>
                      <span class="check-mark">Transportation</span>
                      <% if @behavior.transportation? %>
                          <span class="checkmark"></span>
                      <% end %>
                    </li>
                  </ul>
                </td>
                <td class="vertical-align-middle">
                  <i>Has a PRN medication been added/changed? </i>
                </td>
                <td>
                  <ul class="common-ul-style route-list">
                    <li>
                      <span class="check-mark">Yes</span>
                      <% if @behavior.has_pnr == 'yes' %>
                          <span class="checkmark"></span>
                      <% end %>
                    </li>
                  </ul>
                </td>

                <td>
                  <ul class="common-ul-style route-list">
                    <li>
                      <span class="check-mark">No</span>
                      <% if @behavior.has_pnr == 'no' %>
                          <span class="checkmark"></span>
                      <% end %>
                    </li>
                  </ul>
                </td>
              </tr>
              <tr>
              <tr>
                <td></td>
                <td>
                  <ul class="common-ul-style route-list">
                    <li>
                      <span class="check-mark">Home</span>
                      <% if @behavior.location == 'home' %>
                          <span class="checkmark"></span>
                      <% end %>
                    </li>
                  </ul>
                </td>
                <td class="vertical-align-middle">
                  <ul class="common-ul-style route-list">
                    <li>
                      <span class="check-mark">1st Shift</span>
                      <% if @behavior.shift == 'first' %>
                          <span class="checkmark"></span>
                      <% end %>
                    </li>
                  </ul>
                </td>
                <td class="vertical-align-middle">
                  <ul class="common-ul-style route-list">
                    <li>
                      <span class="check-mark">2nd Shift</span>
                      <% if @behavior.shift == 'second' %>
                          <span class="checkmark"></span>
                      <% end %>
                    </li>
                  </ul>
                </td>
                <td class="vertical-align-middle">
                  <ul class="common-ul-style route-list">
                    <li>
                      <span class="check-mark">3rd Shift</span>
                      <% if @behavior.shift == 'third' %>
                          <span class="checkmark"></span>
                      <% end %>
                    </li>
                  </ul>
                </td>
                <td colspan="3" class="vertical-align-middle">
                  <i>Has a PRN medication been added/changed? &nbsp; &nbsp; </i>
                  <strong class="text-underline"><%= @behavior.pnr_description %></strong>
                </td>
              </tr>
              </tr>
              </tbody>
            </table>
          </td>
        </tr>
        </thead>
        <tbody class="text-center">
        <tr>
          <td colspan="32">Restrictive Measure Used</td>
        </tr>
        <tr>
          <td>Date:</td>
          <td>1</td>
